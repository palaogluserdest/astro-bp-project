---
import { Image } from "astro:assets";
---

<div class="hero-container">
  <div class="content-group">
    <div class="hero-left">
      <h2 class="hero-title">Merhaba, Ben Serdest</h2>
      <h2 class="hero-title">Jr. Fronted Developer</h2>
      <p class="hero-desc">
        Burada yaptığım işleri ve üzerinde çalıştığım HTML, CSS, Javascript ve
        framework için yazılar paylaşıyorum. Bu yolculuğumda benle beraber
        olmanıza çok sevinirim
      </p>
      <ul class="hero-logo-group">
        <li class="hero-logo-item">
          <Image src="/images/html-v2.png" alt="html" width={65} height={65} />
        </li>
        <li class="hero-logo-item">
          <Image src="/images/css-v2.png" alt="html" width={65} height={65} />
        </li>
        <li class="hero-logo-item">
          <Image src="/images/js-v2.png" alt="html" width={65} height={65} />
        </li>
        <li class="hero-logo-item">
          <Image src="/images/react-v2.png" alt="html" width={65} height={65} />
        </li>
        <li class="hero-logo-item">
          <Image
            src="/images/nextjs-v2.png"
            alt="html"
            width={45}
            height={45}
          />
        </li>
        <li class="hero-logo-item">
          <Image
            src="/images/astrojs-v2.png"
            alt="html"
            width={45}
            height={45}
          />
        </li>
      </ul>
    </div>
    <div class="hero-right">
      <Image
        src="/images/hero-img.png"
        alt="hero image"
        width={434}
        height={363}
      />
    </div>
  </div>
  <Image
    src="/icons/bottom-arrow.svg"
    alt="bottom arrow"
    width={48}
    height={48}
    class="bottom-arrow"
  />
</div>

<style lang="scss">
  @use "../styles/shares/index" as i;

  .hero-container {
    max-width: 1440px;
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    height: calc(100vh - 86px);
    width: 100%;
    background-image: url("/images/hero-bg.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;

    .content-group {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      padding: 0 8%;

      .hero-left {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        width: 100%;
        height: calc(100vh - 86px);

        .hero-title {
          font-size: i.$font-size-4xl;
          font-weight: 600;
          color: inherit;
          margin: 0;
        }

        .hero-desc {
          font-size: i.$font-size-md;
          line-height: 1.7rem;
          color: i.$dark-grey;
          margin: 1rem 0;
        }

        .hero-logo-group {
          display: flex;
          justify-content: flex-start;
          align-items: center;
          width: 100%;
          gap: 1rem;

          .hero-logo-item {
            display: flex;
            justify-content: center;
            align-items: center;
          }
        }
      }

      .hero-right {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: calc(100vh - 86px);
      }
    }

    .bottom-arrow {
      position: absolute;
      bottom: 5%;
      cursor: pointer;
    }
  }
</style>

<script>
  const arrow = document.querySelector(".bottom-arrow");

  if (arrow) {
    arrow.addEventListener("click", () => {
      const target = document.querySelector("#category");
      if (target) {
        target.scrollIntoView({ behavior: "smooth" });
      }
    });
  }
</script>

---
import SliderComponent from "./Slider";

export type Slide = {
  id: number;
  title: string;
  image: string;
  link: string;
};

const slides: Slide[] = [
  {
    id: 1,
    title: "Slide 1",
    image: "/images/weather-app.png",
    link: "https://gsp-weather.netlify.app/",
  },
  {
    id: 2,
    title: "Slide 2",
    image: "/images/medium-clone.png",
    link: "https://medium-clone-p2.netlify.app",
  },
  {
    id: 3,
    title: "Slide 3",
    image: "/images/weather-app.png",
    link: "https://gsp-weather.netlify.app/",
